doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet")

        link(rel="stylesheet", href="/client/css/account.css")
    body 
        main.container
          h2 Đăng nhập
          form(action="/auth/login" method="POST")
            .form-group
              label(for="email") Email
              input#email.form-control(type="text" name="email" required)

            .form-group
              label(for="password") Mật khẩu
              input#password.form-control(type="password" name="password" required)

            button.btn.btn-primary.btn-block(type="submit") Đăng nhập

            .redirect-link.mt-3
              p Chưa có tài khoản? 
                a(href="/auth/register") Đăng ký ngay
              p.mt-2
                a(href="/auth/forgot-password" class="text-muted") Quên mật khẩu?
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
        
  
