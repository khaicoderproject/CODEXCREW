<%- include('../../partials/header') %>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100%; /* Đảm bảo body chiếm toàn bộ chiều cao */
  }

  main {
    flex: 1; /* Cho phép main chiếm hết không gian còn lại */
  }

  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .register-container {
    background-color: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 350px;
    text-align: center;
  }

  .register-container h2 {
    margin-bottom: 1.5rem;
    color: #333;
    font-size: 1.8rem;
  }

  .register-container label {
    display: block;
    text-align: left;
    margin-bottom: 0.5rem;
    font-weight: bold;
    color: #333;
    font-size: 0.9rem;
  }

  .register-container input {
    width: 100%;
    padding: 0.75rem;
    margin-bottom: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }

  .register-container button {
    width: 100%;
    padding: 0.75rem;
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
  }

  .register-container button:hover {
    background-color: #45a049;
  }

  .register-container p {
    font-size: 0.9rem;
    color: #777;
  }

  .register-container .redirect-link {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #555;
  }

  .register-container .redirect-link a {
    color: #4caf50;
    text-decoration: none;
  }

  .register-container .redirect-link a:hover {
    text-decoration: underline;
  }

  #message {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #f00;
  }
</style>
<main>
  <div class="register-container">
    <h2>Đăng ký</h2>
    <form id="registerForm" method="POST" action="/auth/register">
      <label for="username">Tên đăng nhập</label>
      <input type="text" id="username" name="username" required />

      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />

      <label for="password">Mật khẩu</label>
      <input type="password" id="password" name="password" required />

      <button type="submit">Đăng ký</button>

      <div class="redirect-link">
        <p>Đã có tài khoản? <a href="/auth/login">Đăng nhập ngay</a></p>
      </div>

      <p id="message"></p>
    </form>
  </div>
</main>

<%- include('../../partials/footer') %>
