doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet")

        link(rel="stylesheet", href="/client/css/account.css")
    body 
        main.container
          h1.text-center.mb-4 Đăng ký tài khoản
          if error
            div.alert.alert-danger.text-center= error
          form(action="/auth/register" method="POST")
            .form-group
              label(for="email") Email
              input#email.form-control(type="text" name="email" required placeholder="Nhập Email")
            .form-group
              label(for="password") Mật khẩu
              input#password.form-control(type="password" name="password" required placeholder="Nhập mật khẩu")
            .form-group
              label(for="confirmPassword") Xác nhận mật khẩu
              input#confirmPassword.form-control(type="password" name="confirmPassword" required placeholder="Nhập lại mật khẩu")
            button.btn.btn-primary.btn-block(type="submit") Đăng ký
          p.text-center.mt-3 Đã có tài khoản? 
            a(href="/auth/login") Đăng nhập ngay
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")

